---
interface Props {
	gq: number;
	jq: number;
}

const { gq, jq } = Astro.props;

const ratio = ((gq / jq) * 100).toFixed(2);
const improvement = (jq / gq).toFixed(1);
---

<div class="flex flex-col gap-1 not-content">
	<div class="flex items-center gap-3">
		<div class="text-end min-w-16">
			<span class="font-bold">GQ</span>
			<span class="text-xs">(v3.5)</span>
		</div>
		<div
			class="h-5 bg-accent"
			style={{
				width: `${ratio}%`,
				boxShadow: "0 0 8px 0 var(--sl-color-accent)",
			}}
		>
		</div>
		<span class="text-xs">{gq}ms ({improvement}x)</span>
	</div>
	<div class="flex items-center gap-3">
		<div class="text-end min-w-16">
			<span class="font-bold">JQ</span>
			<span class="text-xs">(v3.4)</span>
		</div>
		<div class="w-full h-5 bg-muted"></div>
		<span class="text-xs">{jq}ms</span>
	</div>
	<div></div>
</div>
